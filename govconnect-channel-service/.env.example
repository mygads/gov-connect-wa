# Node Environment
NODE_ENV=development
PORT=3001

# Database (Schema: channel)
# Note: Port 5433 for Windows host (avoid conflict with native PostgreSQL)
# Use port 5432 when running inside Docker
DATABASE_URL=postgresql://postgres:postgres_secret_2025@localhost:5433/govconnect?schema=channel

# RabbitMQ
RABBITMQ_URL=amqp://admin:rabbitmq_secret_2025@localhost:5672/govconnect

# Internal API Key (untuk auth antar service)
INTERNAL_API_KEY=govconnect-internal-2025-secret

# WhatsApp API (clivy-wa-support/genfity-wa)
# WA_API_URL is the base URL of clivy-wa-support gateway
# WA_ACCESS_TOKEN is the session token from genfity-wa
WA_API_URL=https://api-wa.genfity.com/wa
WA_ACCESS_TOKEN=your_session_token_here
WA_WEBHOOK_VERIFY_TOKEN=govconnect_verify_token_2025

# Message Batching
# Batch messages from same user to reduce AI calls
MESSAGE_BATCH_DELAY_MS=5000
MAX_BATCH_SIZE=10

# Logging
LOG_LEVEL=debug
LOG_DIR=logs

# Service URLs
CASE_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
