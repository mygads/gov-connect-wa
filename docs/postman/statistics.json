          "query": [{ "key": "period", "value": "weekly" }]
        }
      }
    },
    {
      "name": "Get Trends (Monthly)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{case_service_url}}/statistics/trends?period=monthly",
          "host": ["{{case_service_url}}"],
          "path": ["statistics", "trends"],
          "query": [{ "key": "period", "value": "monthly" }]
        }
      }
    }
  ]
