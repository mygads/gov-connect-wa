generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model admin_users {
  id            String   @id @default(cuid())
  username      String   @unique
  password_hash String
  name          String
  role          String   @default("admin")
  is_active     Boolean  @default(true)
  created_at    DateTime @default(now())
  
  sessions      admin_sessions[]
  activity_logs activity_logs[]
}

model admin_sessions {
  id         String   @id @default(cuid())
  admin_id   String
  token      String   @unique
  expires_at DateTime
  created_at DateTime @default(now())
  
  admin      admin_users @relation(fields: [admin_id], references: [id], onDelete: Cascade)
  
  @@index([admin_id])
  @@index([expires_at])
}

model activity_logs {
  id         String   @id @default(cuid())
  admin_id   String
  action     String
  resource   String
  details    Json?
  ip_address String?
  timestamp  DateTime @default(now())
  
  admin      admin_users @relation(fields: [admin_id], references: [id], onDelete: Cascade)
  
  @@index([admin_id])
  @@index([timestamp])
}

// ==================== SYSTEM SETTINGS ====================

model system_settings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String   @db.Text
  description String?
  updated_at  DateTime @updatedAt
  created_at  DateTime @default(now())
}

// ==================== KNOWLEDGE BASE ====================
// Note: Embeddings are now stored in AI Service vector database
// Dashboard only stores metadata for admin management

model knowledge_base {
  id          String   @id @default(cuid())
  title       String
  content     String   @db.Text
  category    String   // "informasi_umum" | "layanan" | "prosedur" | "jadwal" | "kontak" | "faq"
  keywords    String[] // Array of keywords for better search
  is_active   Boolean  @default(true)
  priority    Int      @default(0) // Higher priority = shown first
  admin_id    String?  // Who created/updated this
  updated_at  DateTime @updatedAt
  created_at  DateTime @default(now())
  
  @@index([category])
  @@index([is_active])
  @@index([keywords])
}

// ==================== KNOWLEDGE DOCUMENTS ====================

model knowledge_documents {
  id              String   @id @default(cuid())
  filename        String   // Stored filename (sanitized)
  original_name   String   // Original upload filename
  mime_type       String   // application/pdf, text/plain, etc.
  file_size       Int      // File size in bytes
  file_url        String   // Storage URL (local or S3)
  
  // Processing status
  status          String   @default("pending") // pending, processing, completed, failed
  error_message   String?  @db.Text
  
  // Metadata
  title           String?  // Document title (extracted or provided)
  description     String?  @db.Text
  category        String?  // Document category for filtering
  
  // Processing info
  total_chunks    Int?     // Number of chunks after processing
  total_tokens    Int?     // Estimated token count
  
  // Relations
  admin_id        String?  // Who uploaded this
  chunks          document_chunks[]
  
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
  
  @@index([status])
  @@index([category])
  @@index([created_at])
}

// ==================== DOCUMENT CHUNKS ====================
// Note: Embeddings are now stored in AI Service vector database
// Dashboard only stores chunk metadata for reference

model document_chunks {
  id              String   @id @default(cuid())
  document_id     String
  chunk_index     Int      // Order in document (0-based)
  content         String   @db.Text
  
  // Metadata for context
  page_number     Int?     // Page number if from PDF
  section_title   String?  // Section/chapter title if available
  
  // Relations
  document        knowledge_documents @relation(fields: [document_id], references: [id], onDelete: Cascade)
  
  created_at      DateTime @default(now())
  
  @@index([document_id])
  @@index([chunk_index])
}
