generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["dashboard"]
}

model admin_users {
  id            String   @id @default(cuid())
  username      String   @unique
  password_hash String
  name          String
  role          String   @default("admin")
  is_active     Boolean  @default(true)
  created_at    DateTime @default(now())
  
  sessions      admin_sessions[]
  activity_logs activity_logs[]
  
  @@schema("dashboard")
}

model admin_sessions {
  id         String   @id @default(cuid())
  admin_id   String
  token      String   @unique
  expires_at DateTime
  created_at DateTime @default(now())
  
  admin      admin_users @relation(fields: [admin_id], references: [id], onDelete: Cascade)
  
  @@index([admin_id])
  @@index([expires_at])
  @@schema("dashboard")
}

model activity_logs {
  id         String   @id @default(cuid())
  admin_id   String
  action     String
  resource   String
  details    Json?
  ip_address String?
  timestamp  DateTime @default(now())
  
  admin      admin_users @relation(fields: [admin_id], references: [id], onDelete: Cascade)
  
  @@index([admin_id])
  @@index([timestamp])
  @@schema("dashboard")
}

// ==================== SYSTEM SETTINGS ====================

model system_settings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String   @db.Text
  description String?
  updated_at  DateTime @updatedAt
  created_at  DateTime @default(now())
  
  @@schema("dashboard")
}

// ==================== KNOWLEDGE BASE ====================

model knowledge_base {
  id          String   @id @default(cuid())
  title       String
  content     String   @db.Text
  category    String   // "informasi_umum" | "layanan" | "prosedur" | "jadwal" | "kontak" | "faq"
  keywords    String[] // Array of keywords for better search
  is_active   Boolean  @default(true)
  priority    Int      @default(0) // Higher priority = shown first
  admin_id    String?  // Who created/updated this
  updated_at  DateTime @updatedAt
  created_at  DateTime @default(now())
  
  @@index([category])
  @@index([is_active])
  @@index([keywords])
  @@schema("dashboard")
}
